# EditorConfig is awesome: https://EditorConfig.org

# Unix-style newlines with a newline ending every file
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

# Shell scripts
[*.{sh,bash,zsh}]
indent_style = space
indent_size = 2

# Zsh configuration files
[.zshrc*]
indent_style = space
indent_size = 2

# Vim configuration
[.vimrc*]
indent_style = space
indent_size = 2

# JSON files
[*.json]
indent_style = space
indent_size = 2

# YAML files
[*.{yml,yaml}]
indent_style = space
indent_size = 2

# Markdown files
[*.md]
indent_style = space
indent_size = 2
trim_trailing_whitespace = false

# Makefile
[Makefile]
indent_style = tab

# Git files
[.gitconfig]
indent_style = tab

# Python files
[*.py]
indent_style = space
indent_size = 4
max_line_length = 120

# JavaScript/TypeScript
[*.{js,ts,jsx,tsx}]
indent_style = space
indent_size = 2

# HTML/CSS
[*.{html,css,scss}]
indent_style = space
indent_size = 2

# Config files
[*.conf]
indent_style = space
indent_size = 2

# Windows files
[*.{bat,cmd,ps1}]
end_of_line = crlf

# Specific Windows config files
[{.wslconfig,wsl.conf}]
end_of_line = crlf
