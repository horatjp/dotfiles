{
  "env": {},
  "permissions": {
    "allow": [
      "Read(./**/*)",
      "Edit(./**/*)",
      "WebSearch",
      "WebFetch",
      "Bash(touch:*)",
      "Bash(mkdir:*)",
    ],
    "deny": [
    "Read(**/.env)",
      "Read(**/.env.*)",
      "Read(**/.envrc)",
      "Read(**/*secret*)",
      "Read(~/.ssh/**)",
      "Bash(sudo:*)",
      "Bash(rm -rf:*)",
      "Bash(git push:*)",
      "Bash(git reset:*)",
      "Bash(git rebase:*)",
      "Read(./.env)",
      "Read(./.env.*)",
      "Read(./secrets/**)",
      "Read(./config/credentials.json)",
      "Read(./build)"
    ]
  },
  "alwaysThinkingEnabled": true,
  "enabledPlugins": {
    "frontend-design@claude-code-plugins": true
  },
  "extraKnownMarketplaces": {
    "claude-code-plugins": {
      "source": {
        "source": "github",
        "repo": "anthropics/claude-code"
      }
    }
  }
}
