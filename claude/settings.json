{
  "env": {},
  "permissions": {
    "allow": [
      "Read(./**/*)",
      "Edit(./**/*)",
      "Write(./**/*)",
      "Update(./**/*)",
      "Bash(npm:*)",
      "Bash(pnpm:*)",
      "Bash(yarn:*)",
      "Bash(git status:*)",
      "Bash(git diff:*)",
      "Bash(git add:*)",
      "Bash(git commit:*)",
      "Bash(git log:*)",
      "Bash(docker:*)",
      "Bash(python:*)",
      "Bash(node:*)",
      "Bash(touch:*)",
      "Bash(mkdir:*)",
      "Bash(mv:*)",
      "Bash(cp:*)",
      "Bash(ls:*)",
      "Bash(codex:*)",
      "WebSearch",
      "WebFetch",
      "Skill(git-commit)",
      "Skill(agent-memory)",
      "Skill(issues)",
      "Skill(codex)",
      "mcp__context7",
      "mcp__chrome-devtools"
